---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<div
  class:list={[
    `bg-[#8579ee]/30 rounded shadow-xl flex flex-col justify-center items-center p-2 mt-2`,
    { "border border-white/50": !isBig },
  ]}
>
  <!-- <a href=`/pokemon/${id}`> -->
  <a href=`/pokemons/${name}`>
    <img
      transition:name={`${name}-image`}
      src={imageSrc}
      alt={name}
      class:list={[{ "w-60 h-60": isBig }, { "w-20 h-20": !isBig }]}
    />
    <span
      class:list={[
        "capitalize flex justify-center items-center",
        { "text-3xl": isBig },
      ]}
    >
      #{id}
      {name}
    </span>
  </a>
</div>
