---
import type { Result } from "../interfaces/pokemon-list.response";

interface Props {
  url: string;
  name: string;
}

const { name, url } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${id}.png`;
---

<div
  class="bg-[#8579ee]/30 rounded shadow-lg flex flex-col justify-center items-center p-2"
>
  <img src={imageSrc} alt={name} height={100} width={100} />
  <span>{name}</span>
</div>
